<UserControl x:Class="SimulatorControl.View.ManipulateJoint.ManipulateThrusterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimulatorControl.View.ManipulateJoint"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Horizontal">
            <Label Content="ForceLength"/>
            <Slider Minimum="0" Maximum="0.01" Value="{Binding Force}" Width="100" Margin="0 3"/>
        </StackPanel>
        <CheckBox IsChecked="{Binding IsEnabled}" Content="IsEnabled"/>
    </StackPanel>
</UserControl>
