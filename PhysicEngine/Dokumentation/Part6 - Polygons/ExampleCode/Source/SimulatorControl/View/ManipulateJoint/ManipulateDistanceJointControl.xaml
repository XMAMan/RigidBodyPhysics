<UserControl x:Class="SimulatorControl.View.ManipulateJoint.ManipulateDistanceJointControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimulatorControl.View.ManipulateJoint"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label Content="LengthPosition"/>
        <Slider Minimum="{Binding MinLengthPosition}" Maximum="{Binding MaxLengthPosition}" Value="{Binding LengthPosition}" Width="100" Margin="0 3"/>
    </StackPanel>
</UserControl>
