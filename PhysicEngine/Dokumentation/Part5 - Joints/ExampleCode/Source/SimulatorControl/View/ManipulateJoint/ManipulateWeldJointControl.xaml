<UserControl x:Class="SimulatorControl.View.ManipulateJoint.ManipulateWeldJointControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimulatorControl.View.ManipulateJoint"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Horizontal">
            <Label Content="Stiffness"/>
            <Slider Minimum="0" Maximum="10" Value="{Binding Stiffness}" Width="100" Margin="0 3"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Damping"/>
            <Slider Minimum="0" Maximum="1" Value="{Binding Damping}" Width="100" Margin="0 3"/>
        </StackPanel>
    </StackPanel>
</UserControl>
