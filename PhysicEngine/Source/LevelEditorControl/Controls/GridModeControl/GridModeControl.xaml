<UserControl x:Class="LevelEditorControl.Controls.GridModeControl.GridModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelEditorControl.Controls.GridModeControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
            <Label Content="Size"/>
            <TextBox Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}" Width="30" Height="20"/>
        </StackPanel>
        <CheckBox Content="Show Grid" IsChecked="{Binding ShowGrid}"/>
    </StackPanel>
</UserControl>
