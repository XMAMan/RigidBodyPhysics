<UserControl x:Class="PhysicSceneEditorControl.Controls.ThrusterProperty.ThrusterPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhysicSceneEditorControl.Controls.ThrusterProperty"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="ForceLength"/>
            <TextBox Text="{Binding Path=ForceLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,StringFormat=N6}"/>
        </StackPanel>
        <CheckBox IsChecked="{Binding IsEnabled}" Content="IsEnabled"/>
    </StackPanel>
</UserControl>
