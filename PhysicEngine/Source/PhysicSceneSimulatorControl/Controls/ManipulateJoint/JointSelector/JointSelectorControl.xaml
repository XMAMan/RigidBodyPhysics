<UserControl x:Class="PhysicSceneSimulatorControl.Controls.ManipulateJoint.JointSelector.JointSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhysicSceneSimulatorControl.Controls.ManipulateJoint.JointSelector"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <ComboBox SelectedItem="{Binding SelectedJointName}" ItemsSource="{Binding JointNames}"/>
        <ContentControl Content="{Binding ContentUserControl}"/>
    </StackPanel>
</UserControl>
