<UserControl x:Class="PhysicSceneSimulatorControl.Controls.ManipulateJoint.RotaryMotor.ManipulateRotaryMotorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhysicSceneSimulatorControl.Controls.ManipulateJoint.RotaryMotor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Horizontal">
            <Label Content="RotaryForce"/>
            <Slider Minimum="-1" Maximum="1" Value="{Binding RotaryForce}" Width="100" Margin="0 3"/>
        </StackPanel>
        <CheckBox IsChecked="{Binding IsEnabled}" Content="IsEnabled"/>
        <CheckBox IsChecked="{Binding BrakeIsEnabled}" Content="BrakeIsEnabled"/>        
    </StackPanel>
</UserControl>
